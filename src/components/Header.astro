---
import Navigation from '@components/Navigation.astro'
import { SkipLinks } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'

import {
	PATH,
	PATH_CURSADA,
	PATH_CURSADA2025C1,
	PATH_CONTRATO_PEDAGOGICO,
	PATH_VIDEOS,
	PATH_MATERIAL,
} from '@/paths'
---

<header>
	<SkipLinks />
	<Navigation>
		<li class="menu-item">
			<a href={PATH}>Inicio</a>
		</li>

		<li class="menu-item has-dropdown">
			<button
				aria-haspopup="true"
				aria-expanded="false"
				>Cursada</button
			>
			<ul class="dropdown-menu">
				<li class="menu-item">
					<a href={PATH_CURSADA}>Cursada Acutal</a>
				</li>
				<li class="menu-item">
					<a href={PATH_CURSADA2025C1}>Cursada 2025 C1</a>
				</li>
			</ul>
		</li>

		<li class="menu-item">
			<a href={PATH_CONTRATO_PEDAGOGICO}>Contrato pedag√≥gico</a>
		</li>
		<li class="menu-item has-dropdown">
			<button
				aria-haspopup="true"
				aria-expanded="false"
				>Utilidad</button
			>
			<ul class="dropdown-menu">
				<li class="submenu-item">
					<a href={PATH_MATERIAL}>Material</a>
				</li>
				<li class="submenu-item">
					<a href={PATH_VIDEOS}>Videos</a>
				</li>
			</ul>
		</li>

		<li class="menu-item type-icon">
			<a
				href="https://github.com/EP-UnaHur/EP-UnaHur.github.io"
				title="Go to the GitHub page">
				<Icon name="ion:logo-github" />
			</a>
		</li>
	</Navigation>
</header>

<style lang="scss" is:global>
	@use '../assets/scss/base/outline' as *;

	header {
		.type-icon a {
			display: block;

			[data-icon] {
				height: auto;
				margin-top: -4px;
				width: 30px;

				path {
					fill: var(--action-color);
				}
			}
		}

		.btn-ingresar {
			background-color: var(--action-color);
			color: #20292c !important;
		}
	}
</style>
